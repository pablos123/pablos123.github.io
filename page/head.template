<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="SHARED_DIR/icon.png" />
    <link rel="stylesheet" href="SHARED_DIR/style.css" />
    <title>pablos123</title>
    <script>
      window.onload = () => {
        let theme = false;

        if (document.cookie) theme = document.cookie.split("=")[1] === "true";

        const set_theme = () => {
          document.body.classList.add(theme ? "light" : "dark");
          document.body.classList.remove(theme ? "dark" : "light");
          document.cookie = `theme=${theme}; path=/`;
        };

        set_theme();

        document.getElementById("theme").addEventListener("click", () => {
          theme = !theme;
          set_theme();
        });
      };
    </script>
  </head>
  <body class="dark">
    <header>
      <a href="BACK_BUTTON">Go Back</a> |
      <a type="button" id="theme">Dark..Light</a>
    </header>
  </body>
</html>
